
@{
    ViewBag.Title = "GeneralForm";
}
<div class="banner">
    <img class="banner-image" src="~/photos/heart.jpg" alt="" style="width: 100%; height:350px">
</div>

<div class="container" style="padding-top:30px">
    <div class="row" style="align-content:center;">
        <div class="grid-100 clearfix" style="text-align:center">
            <h4 id="registration_form_title">Non-Clinical General Volunteer Form</h4>
        </div>

        <br />

        <p style="color:rgb(0, 143, 179); text-align: center; font-size:18px;font-style: italic">

            This volunteer form is for all individuals who wish to volunteer with SOSL in a non-clinical
            fashion, or for undergraduate and medical students who wish to shadow our clinical operations.
        </p>

        <!-- Main form -->
        <form>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>
                        <abbr title="required">*</abbr> First Name
                    </label>
                    <input required="required" class="form-control" type="text" /><br />
                    <label>
                        <abbr title="required">*</abbr> Last Name
                    </label>
                    <input required="required" class="form-control" type="text" /><br />
                    <label>
                        <abbr title="required">*</abbr> Address
                    </label>
                    <input required="required" class="form-control" type="text" /><br />
                    <label>
                        <abbr title="required">*</abbr> City
                    </label>
                    <input required="required" class="form-control" type="text" /><br />
                    <label>
                        <abbr title="required">*</abbr> Postal Code
                    </label>
                    <input required="required" class="form-control" type="text" /> <br />
                    <label>
                        <abbr title="required">*</abbr> Birthday
                    </label>
                    <input required="required" class="string required datepicker form-control" size="75" type="text" />

                </div>
                <br />
                <div class="form-group col-md-4">

                    <div class="form-group">
                        <label>State</label>
                        <br />

                        <input type="hidden" value="" />
                        <select class="multi-select required form-control" multiple="multiple">
                            <option value="AL">Alabama</option>
                            <option value="AK">Alaska</option>
                            <option value="AZ">Arizona</option>
                            <option value="AR">Arkansas</option>
                            <option value="CA">California</option>
                            <option value="CO">Colorado</option>
                            <option value="CT">Connecticut</option>
                            <option value="DE">Delaware</option>
                            <option value="FL">Florida</option>
                            <option value="GA">Georgia</option>
                            <option value="HI">Hawaii</option>
                            <option value="ID">Idaho</option>
                            <option value="IL">Illinois</option>
                            <option value="IN">Indiana</option>
                            <option value="IA">Iowa</option>
                            <option value="KS">Kansas</option>
                            <option value="KY">Kentucky</option>
                            <option value="LA">Louisiana</option>
                            <option value="ME">Maine</option>
                            <option value="MD">Maryland</option>
                            <option value="MA">Massachusetts</option>
                            <option value="MI">Michigan</option>
                            <option value="MN">Minnesota</option>
                            <option value="MS">Mississippi</option>
                            <option value="MO">Missouri</option>
                            <option value="MT">Montona</option>
                            <option value="NE">Nebraska</option>
                            <option value="NV">Nevada</option>
                            <option value="NH">New Hampshire</option>
                            <option value="NJ">New Jersey</option>
                            <option value="NM">New Mexico</option>
                            <option value="NY">New York</option>
                            <option value="NC">North Carolina</option>
                            <option value="ND">North Dakota</option>
                            <option value="OH">Ohio</option>
                            <option value="OK">Oklahoma</option>
                            <option value="OR">Oregon</option>
                            <option value="PA">Pennsylvania</option>
                            <option value="RI">Rhode Island</option>
                            <option value="SC">South Carolina</option>
                            <option value="SD">South Dakota</option>
                            <option value="TN">Tennessee</option>
                            <option value="TX">Texas</option>
                            <option value="UT">Utah</option>
                            <option value="VT">Vermont</option>
                            <option value="VA">Virginia</option>
                            <option value="WA">Washington</option>
                            <option value="WV">West Virginia</option>
                            <option value="WI">Wisconsin</option>
                            <option value="WY">Wyoming</option>
                        </select>
                    </div><br />
                    <label>
                        <abbr title="required">*</abbr> Mobile Phone
                    </label>
                    <input required="required" class="string tel required form-control" type="tel" /> <br />
                    <label>Employer</label>
                    <input class="string optional form-control" size="75" type="text" /> <br />

                    <label>
                        <abbr title="required">*</abbr> Email
                    </label>
                    <input required="required" class="string email required form-control" type="email" value="" /> <br />

                    <label class="text optional control-label">Briefly explain to us why you are interested in serving with SOSL.</label>
                    <textarea rows="4" class="text optional form-control" maxlength="1000">
                        </textarea>

                </div>

                <div class="form-group col-md-4">

                    <label class="select required control-label" for="registration_person_attributes_custom_field_answers_12895">
                        <abbr title="required">*</abbr> What is your T-Shirt Size?
                    </label>
                    <select required="required" class="select required form-control" aria-required="true">
                        <option value="">Select...</option>
                        <option value="XS">XS</option>
                        <option value="S">S</option>
                        <option value="M">M</option>
                        <option value="L">L</option>
                        <option value="XL">XL</option>
                        <option value="XXL">XXL</option>
                    </select> <br />

                    <label>
                        <abbr title="required">*</abbr> Which best describes you?
                    </label>
                    <select required="required" class="select required form-control" aria-required="true">
                        <option value="">Select...</option>
                        <option value="Undergraduate Student">Undergraduate Student</option>
                        <option value="Medical Student (1st-3rd year)">Medical Student (1st-3rd year)</option>
                        <option value="Medical Student (4th Year)">Medical Student (4th Year)</option>
                        <option value="Other">Other</option>
                    </select> <br />
                    <label>* Which areas are you interested in volunteering in?</label>
                    <br />

                    <input type="hidden" value="" />
                    <select class="multi-select required form-control" multiple="multiple">
                        <option value="Registration">Registration</option>
                        <option value="Cleaning">Cleaning</option>
                        <option value="Clinical Shadowing">Clinical Shadowing</option>
                        <option value="Fundraising">Fundraising</option>
                    </select> <br />
                    <label>Preferred Name</label>
                    <input class="string optional form-control" size="75" type="text" /> <br />

                    <div style="align-content:center; text-align:center;">
                        <button type="button" class="btn btn-info">Submit</button>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>
